{
    "manifest_version": 3,
    "name": "CouponBuddy",
    "version": "5.5.0",
    "icons": {
        "16": "./assets/images/CouponBuddy-16.png",
        "48": "./assets/images/CouponBuddy-48.png",
        "128": "./assets/images/CouponBuddy-128.png"
    },
    "web_accessible_resources": [
        {
            "resources": [
                "assets/images/*"
            ],
            "matches": [
                "<all_urls>"
            ]
        }
    ],
    "host_permissions": [
        "<all_urls>"
    ],
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "./scripts/gglContentScript.js",
                "./scripts/bngContentScript.js",
                "./scripts/yhoContentScript.js"
            ]
        }
    ],
    "background": {
        "service_worker": "background.js"
    },
    "permissions": [
        "storage",
        "alarms",
        "nativeMessaging"
    ]
}